@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Realidad Aumentada Museo Nacional Historia Natural";
}

<div class="row">
    <div class="col-lg-12 headerIndex"></div>
</div>

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bordeCard">
                <div class="float-chart-container">
                    <div class="mb-3 text-center bordeCaja">
                        <img src="~/images/LogoMuseo.jpeg" class="img-thumbnail rounded mx-auto d-block" alt="..." style="max-width: 50%;">
                    </div>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <h1 class="text-center"> RECUPERACIÓN DE CUENTA</h1>
                            <p class="text-center"> Se le enviará un código de verificación al correo ingresado.</p>
                        </div>

                        <div class="mb-3" style="margin-top: 2rem !important;">
                            <input asp-for="Input.Email" type="email" class="form-control" placeholder="CORREO ELECTRÓNICO">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3 text-right">
                            <button type="submit" class="btn btn-primary">ENVIAR CÓDIGO</button>
                        </div>
                    </form>

                    <div class="mb-3 text-center">
                        <a class="btn btn-link" asp-page="./Login" role="button">Volver a inicio de sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
