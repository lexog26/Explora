@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@*<h2>@ViewData["Title"]</h2>*@

<div class="row">
    <div class="col-lg-12 headerIndex"></div>
</div>


<div class="row">

    <div class="col-lg-2"></div>
    <div class="col-lg-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="float-chart-container text-center">
                    <div class="mb-3">
                        <img src="~/images/LogoMuseo2.jpeg" class="img-thumbnail rounded mx-auto d-block" alt="...">
                    </div>
                    <div class="mb-3">
                        <img src="~/images/LogoGob.png" class="img-thumbnail logoChico rounded mx-auto d-block" alt="...">
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="col-lg-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body bordeCard">
                <div class="float-chart-container">
                    <div class="mb-3 text-center bordeCaja">
                        <img src="~/images/LogoMuseo.jpeg" class="img-thumbnail rounded mx-auto d-block" alt="...">
                    </div>

                    <form method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <input asp asp-for="Input.Email" class="form-control" placeholder="USUARIO">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <input asp asp-for="Input.Password" class="form-control" placeholder="CONTRASEÑA">
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3 text-right">
                            <button type="submit" class="btn btn-primary">
                                CONFIRMAR
                            </button>
                        </div>

                        

                    </form>

                    <div class="espacioPadding">

                        <div class="mb-3 text-center">
                            <a asp-page="./ForgotPassword" class="btn btn-link">¿Olvidaste tu contraseña?</a>
                        </div>

                        <div class="mb-3 text-center">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-link">Registrarme</a>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>

