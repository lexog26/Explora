@model Explora.DataTransferObjects.DataTransferObjects.TotemDto
@{
    ViewData["Title"] = "Crear Tótem";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent p-0 mt-1 mb-0">
                <li class="breadcrumb-item" aria-current="page">Tótems</li>
                <li class="breadcrumb-item active" aria-current="page">Crear Tótem</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-1 text-left">
        <a class="btn btn-primary botonVolver" asp-action="Index" role="button"><</a>
    </div>
    <div class="col-7 text-left">
        <h1 class="card-title crear">TÓTEM</h1>
    </div>
</div>

@using (Html.BeginForm("Create", "Totems", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="float-chart-container">
                        <div class="form-group">
                            <label>NOMBRE</label>
                            <input type="text" asp-for="@Model.Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>DESCRIPCIÓN</label>
                            <textarea class="form-control" asp-for="@Model.Description" rows="5"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="float-chart-container">
                        <label>ICONO</label>
                        <div class="form-group">
                            <input type="file" class="form-control-file" name="image">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="float-chart-container">
                        <label>ARCHIVO</label>
                        <div class="form-group">
                            <input type="file" class="form-control-file" name="file">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <button type="submit" class="btn btn-primary botonAgregar">Guardar</button>
        </div>
    </div>
}

